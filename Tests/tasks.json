{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Tests",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Tests/Tests.cpp",
                "${workspaceFolder}/Library/Matrix.cpp",
                "${workspaceFolder}/Library/ConstantGenerator.cpp",
                "${workspaceFolder}/Library/Exercise.cpp",
                "${workspaceFolder}/Library/Task1.cpp",
                "${workspaceFolder}/Library/Task2.cpp",
                "${workspaceFolder}/Library/Task3.cpp",
                "-o",
                "${workspaceFolder}/Tests/tests.exe",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Компиляция тестов"
        }
    ]
}